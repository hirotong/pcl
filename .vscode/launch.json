    "version": "0.2.0",
    "configurations": [
      {
        "name": "(gdb) Launch: eval",
        "type": "cppdbg",
        "request": "launch",
        "program": "${command:cmake.launchTargetPath}",
        "args": ["-r", "-eval", "/home/ton068/kinect_data/rgbd_dataset_freiburg1_desk/processed/"],
        "stopAtEntry": false,
        "cwd": "${fileDirname}",
        "environment": [{"name": "DISPLAY", "value": "localhost:10.0"}],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            },
            {
                "description": "Set Disassembly Flavor to Intel",
                "text": "-gdb-set disassembly-flavor intel",
                "ignoreFailures": true
            }
        ]
      },

        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": ["-r", "-pcd", "/home/ton068/Jinguang/datasets/kinect_data/rgbd_dataset_freiburg2_rpy/pcd"],
            "stopAtEntry": true,
            "cwd": "${fileDirname}",
            "environment": [{"name": "DISPLAY", "value": "localhost:12.0"}],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}
